<% content_for :title do %>
    : Recipes
<% end %>

<h1>Page#recipes</h1>
<p>Find me in app/views/page/recipes.html.erb</p>

<% @recipes.each do |recipe| %>
    <section style="border: 1px solid black; margin: 10px; padding: 10px;">
    <h1><%= recipe.name %></h1><br>
    Made by: <%= recipe.made_by %><br>
    Serves: <%= recipe.serves %><br>
    Last Made: <%= recipe.last_made %>
    </section>
<% end %>