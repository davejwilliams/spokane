<% content_for :title do %>
    : Contact
<% end %>

<h1>Ask a Question</h1>

<%= form_tag do %>

    <%= field_set_tag 'Information' do %>
        <p>
        <%= label_tag 'name', 'Your Name' %>
        <%#= text_field_tag 'name', @name, class: 'input', size: 50, required: 'required' %>
        <%= text_field_tag 'name', @name, class: 'input', size: 50, required: 'required' %><br>

        <%= label_tag 'email', 'Your Email' %>
        <%#= email_field_tag 'email', @email, class: 'input', size: 50, required: 'required' %>
        <%= email_field_tag 'email', @email, class: 'input', size: 50, required: 'required' %>

        <%= label_tag 'age', 'Age' %>
        <%= number_field_tag 'age', @age, min: 13, max: 100, size: 3  %>
        </p>


        <p>What food would you like to bring?<br>
        <%= label_tag :food_salad, 'Appetizer' %>
        <%= radio_button_tag :food, :appetizer, @food == 'appetizer' %>
        <%= label_tag :food_maincourse, 'Main Course' %>
        <%= radio_button_tag :food, :maincourse, @food == 'maincourse' %>
        <%= label_tag :food_dessert, 'Dessert' %>
        <%= radio_button_tag :food, :dessert, @food == 'dessert' %>
        </p>



        <br>
        <%= submit_tag 'Submit'  %>

    <% end %>

<% end %>
<br>
<%= show_params %>